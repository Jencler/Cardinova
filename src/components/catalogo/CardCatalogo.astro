---
import ArrowRight from "../icons/ArrowRight.astro";

const { img, title, description, href } = Astro.props;
---

<article>
  <img src={img} alt="imagen de catalogo de cardinova" />
  <div class="catalogo-info">
    <h4>
      {title}
    </h4>
    <p>{description}</p>
    <a href={href} role="link">Ver video <span><ArrowRight /></span></a>
  </div>
</article>

<style>
  article {
    width: 100%;

    background: #fff;
    border-radius: 8px;
    transition: box-shadow 0.2s ease-in-out;
  }
  article:hover {
    box-shadow: 2px 2px 6px #0000003a;
  }

  img {
    width: 100%;
    object-fit: cover;
    border-radius: 8px 8px 0 0;
  }

  h4 {
    font-size: 18px;
    font-weight: 700;
    text-align: start;
    line-height: 28px;
    margin-bottom: 8px;
  }

  p {
    text-align: start;
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    color: var(--text-description);
    margin-bottom: 16px;
  }

  a {
    text-decoration: none;
    text-align: start;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 4px;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    transition: text-decoration 0.2s ease-in-out;

    & span {
      display: flex;
      align-items: center;
    }
  }

  a:hover {
    text-decoration: underline;
  }

  .catalogo-info {
    padding: 24px;
  }
</style>
