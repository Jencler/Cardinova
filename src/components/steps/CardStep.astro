---
import ArrowRight from "../icons/ArrowRight.astro";

const { step, title, description, href } = Astro.props;
---

<article>
  <div class="header-card">
    <span>{step}</span>
    <h3>{title}</h3>
  </div>
  <p>{description}</p>
  <a href={href}>Ver video <ArrowRight /></a>
</article>

<style>
  article {
    width: 100%;
    background-color: #fff;
    padding: 24px;
    border-radius: 8px;
    box-shadow: 1px 1px 5px #a5a5a52e;
  }

  .header-card {
    display: flex;
    gap: 10px;
    align-items: center;

    & span {
      width: 32px;
      height: 32px;
      border-radius: 100px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: var(--primary-color);
      font-size: 14px;
      font-weight: 700;
      background-color: rgb(0 152 181 / 10%);
    }
  }

  h3 {
    color: var(--primary-color);
    text-align: start;
    font-size: 20px;
  }

  p {
    color: var(--text-description);
    line-height: 24px;
    text-align: start;
    font-size: 16px;
    margin-top: 16px;
  }

  a {
    text-decoration: none;
    text-align: start;
    display: flex;
    margin-top: 16px;
    color: var(--primary-color);
    font-size: 14px;
    font-weight: 600;
    gap: 6px;
    align-items: center;
  }
</style>
