---
import ArrowRight from "../icons/ArrowRight.astro";

const { step, title, description, href } = Astro.props;
---

<article>
  <div class="header-card">
    <span>{step}</span>
    <h3>{title}</h3>
  </div>
  <p>{description}</p>
  <div class="container_video">
    <div class="capa"></div>
    <video autoplay loop muted controls class="video">
      <source src={href} type="video/mp4" />
      Tu navegador no soporta la reproducci√≥n de videos.
    </video>
  </div>
</article>

<style>
  article {
    width: 100%;
    background-color: var(--bg-secondary);
    padding: 24px;
    border-radius: 8px;
    box-shadow: 1px 1px 5px #1e1e1e2e;
  }

  .header-card {
    display: flex;
    gap: 10px;
    align-items: center;

    & span {
      width: 32px;
      height: 32px;
      border-radius: 100px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: var(--primary-color);
      font-size: 14px;
      font-weight: 700;
      background-color: rgb(0 152 181 / 10%);
    }
  }

  h3 {
    color: var(--primary-color);
    text-align: start;
    font-size: 20px;
  }

  p {
    color: var(--text-description);
    line-height: 24px;
    text-align: start;
    font-size: 16px;
    margin-top: 16px;
  }

  .container_video {
    position: relative;
    aspect-ratio: 1 / 1;
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
  }

  .capa {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    z-index: 2000;
  }
  .video {
    border-radius: 8px;
    width: 100%;
    left: 0;
    position: absolute;
    bottom: -60px;
    z-index: 1000;
  }
</style>
