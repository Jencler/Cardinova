---
import TestimonialMessage from "../icons/TestimonialMessage.astro";
const { avatar, author, description, location } = Astro.props;
---

<article>
  <span class="icon"><TestimonialMessage /></span>
  <p>{description}</p>
  <div class="info__avatar">
    <img
      src={avatar}
      alt="Avatar testimonio cadinova"
      role="img"
      loading="lazy"
    />

    <div class="info-avatar__detail">
      <span>{author}</span>
      <span>{location}</span>
    </div>
  </div>
</article>

<style>
  article {
    background: #f9fafb;
    border: 1px solid var(--border-color);
    padding: 24px;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    transition: box-shadow 0.2s ease-in-out;
  }

  article:hover {
    box-shadow: 2px 2px 6px #0000003a;
  }

  .info__avatar {
    display: flex;
    align-items: flex-start;
    gap: 10px;

    & img {
      width: 40px;
      height: 40px;
      object-fit: cover;
    }
  }

  p {
    font-size: 14px;
    font-weight: 400px;
    color: var(--text-description);
    line-height: 20px;
    text-align: start;
  }

  .icon {
    color: var(--primary-color);
    text-align: start;
  }

  .info-avatar__detail {
    display: flex;
    flex-direction: column;
  }

  .info-avatar__detail span:nth-child(1) {
    text-align: start;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
  }

  .info-avatar__detail span:nth-child(2) {
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    color: var(--text-description);
    text-align: start;
  }

  @media (min-width: 768px) {
    p {
      font-size: 16px;
      line-height: 24px;
    }
  }
</style>
