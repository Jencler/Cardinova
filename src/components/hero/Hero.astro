---
import Check from "../icons/Check.astro";

const Items = [
  "Sistema 100% automatizado",
  "Sin necesidad de personal",
  "Funciona 24/7, incluso mientras duermes",
  "Soporte técnico incluido",
];
---

<section class="hero">
  <article>
    <h1>Genera <span>+S/500 Diarios</span> Con Tu Estación de Lavado</h1>
    <p>
      Inicia tu negocio de autolavado con nuestra tecnología 100% automatizada.
      Inversión desde S/3,700 con retorno garantizado.
    </p>
    <ul class="list">
      {
        Items.map((item) => (
          <li>
            <span>
              <Check />
            </span>
            {item}
          </li>
        ))
      }
    </ul>
    <a href="/" role="button" class="button">¡Empieza Hoy Mismo!</a>
  </article>
  <img
    loading="lazy"
    class="poster__video"
    src="poster-video.avif"
    alt="Poster del video"
  />
</section>

<style>
  .hero {
    padding: 32px 16px;
    display: grid;
    gap: 32px;
  }

  h1 {
    font-size: 30px;
    font-weight: 700;
    letter-spacing: -0.5px;
    color: var(--text-white);

    & span {
      color: var(--primary-color);
    }
  }

  p {
    color: var(--text-description);
    margin-top: 20px;
    font-size: 16px;
    line-height: 24px;
  }

  .list {
    list-style: none;
    margin-top: 15px;

    & li {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      margin-bottom: 10px;
      color: var(--text-description);

      & span {
        color: var(--primary-color);
        display: flex;
        align-items: center;
      }
    }
  }
  .button {
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--bg-btn);
    color: #fafafa;
    text-decoration: none;
    border-radius: 6px;
    margin-top: 30px;
    font-size: 14px;
    font-weight: 700;
    transition: background 0.2s ease-in-out;
  }

  .button:hover {
    background: var(--bg-btn-hover);
  }

  .poster__video {
    border-radius: 10px;
    width: 100%;

    object-fit: cover;
  }

  @media (min-width: 640px) {
    .button {
      max-width: 204px;
    }
  }

  @media (min-width: 768px) {
    .hero {
      padding: 64px 16px;
    }

    h1 {
      font-size: 36px;
      line-height: 40px;
      font-weight: 700;
    }

    p {
      margin-top: 24px;
      font-size: 18px;
      font-weight: 400;
      line-height: 28px;
    }

    .list {
      list-style: none;
      margin-top: 24px;

      & li {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 16px;
        margin-bottom: 12px;
      }
    }
  }

  @media (min-width: 1024px) {
    .hero {
      grid-template-columns: 1fr 1fr;
      gap: 64px;
      align-items: center;
      padding: 80px 16px;
    }

    h1 {
      font-size: 48px;
      line-height: 48px;
      font-weight: 700;
    }

    p {
      margin-top: 24px;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
    }

    .poster__video {
      height: 400px;
    }
  }

  @media (min-width: 1280px) {
    h1 {
      font-size: 60px;
      line-height: 60px;
      font-weight: 700;
    }

    .hero{
      max-width: 1400px;
      margin: 0 auto;
    }
  }
</style>
